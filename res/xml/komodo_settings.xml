<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/komodo_settings_title" >

        <!-- About -->
        <Preference
            android:key="about_catagory"
            android:title="@string/about_title"
            android:fragment="com.komodo.settings.fragments.About"
            android:icon="@drawable/ic_settings_about"/>

    <PreferenceCategory
            android:key="features"
            android:title="Komodo Features" >
			
        <!-- Status Bar -->
        <Preference
            android:key="statusbar_category"
            android:title="@string/statusbar_title"
            android:fragment="com.komodo.settings.fragments.StatusBar" 
            android:icon="@drawable/ic_settings_statusbar"/>

        <!-- Interface -->
        <Preference
            android:key="interface_category"
            android:title="@string/interface_title"
            android:fragment="com.komodo.settings.fragments.Interface"
            android:icon="@drawable/ic_settings_interface"/>

        <!-- Quick Settings -->
        <Preference
            android:key="quicksettings_category"
            android:title="@string/quicksettings_title"
            android:fragment="com.komodo.settings.fragments.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"/>

        <!-- Buttons -->
        <Preference
            android:key="buttons_category"
            android:title="@string/buttons_title"
            android:fragment="com.komodo.settings.fragments.Buttons"
            android:icon="@drawable/ic_settings_buttons"/>
        
        <!-- Gesture -->
        <Preference
            android:key="gestures_category"
            android:title="@string/gestures_title"
            android:fragment="com.komodo.settings.fragments.Gestures"
            android:icon="@drawable/ic_settings_gesture"/>

        <!-- Navigation Bar -->
        <Preference
            android:key="navigation_category"
            android:title="@string/navigation_title" 
	    android:fragment="com.komodo.settings.fragments.Navigation"
            android:icon="@drawable/ic_settings_navigation"/>

        <!-- Lock Screen -->
        <Preference
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title" 
            android:fragment="com.komodo.settings.fragments.LockScreen"
            android:icon="@drawable/ic_settings_lockscreen"/>

        <!-- Notifications -->
        <Preference
            android:key="notifications_category"
            android:title="@string/notifications_title"
            android:fragment="com.komodo.settings.fragments.Notifications"
            android:icon="@drawable/ic_settings_notifications"/>

        <!-- Animation -->
        <Preference
            android:key="animations_category"
            android:title="@string/animations_title"
            android:fragment="com.komodo.settings.fragments.Animations"
            android:icon="@drawable/ic_settings_animation"/>

        <!-- Battery Saving -->
        <Preference
            android:key="battery_category"
            android:title="@string/battery_title"
            android:fragment="com.komodo.settings.fragments.Battery"
            android:icon="@drawable/ic_settings_batterysave"/>

        <!-- Misc -->
        <Preference
            android:key="misc_category"
            android:title="@string/misc_title"
            android:fragment="com.komodo.settings.fragments.Misc"
            android:icon="@drawable/ic_settings_misc"/>

    </PreferenceCategory>
</PreferenceScreen>
